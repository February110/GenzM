{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Azure": {
    "ConnectionString": "<AZURE_STORAGE_CONNECTION_STRING>",
    "ContainerName": "class-uploads"
  },

  "Jwt": {
    "Key": "<JWT_SECRET_DOCKER>",
    "Issuer": "class_api",
    "Audience": "class_api_users",
    "ExpireMinutes": 180
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=sqlserver,1433;Database=Class_Db;User=sa;Password=YourStrong_Passw0rd;TrustServerCertificate=True",
    "Redis": "redis:6379"
  },

  "RabbitMQ": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "UserName": "guest",
    "Password": "guest",
    "QueueName": "notifications"
  },

  "WorkerAuth": {
    "ApiKey": "<WORKER_AUTH_KEY_DOCKER>"
  },

  "Gemini": {
    "ApiKey": "<GEMINI_API_KEY>",
    "Model": "gemini-2.5-flash"
  }
}
