{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=<SERVER>;Database=Class_Db;Trusted_Connection=True;TrustServerCertificate=True"
  },
 "Cors": {
    "AllowedOrigins": [ "http://localhost:3000" ]
  },
  "Redis": {
    "InstanceName": "class:",
    "OverviewCacheSeconds": 60,
    "ActivityFeedKey": "activity:feed",
    "ActivityFeedLimit": 200
  },

  "Azure": {
    "ConnectionString": "<AZURE_STORAGE_CONNECTION_STRING>",
    "ContainerName": "<AZURE_CONTAINER_NAME>"
  },
  "Jwt": {
    "Key": "<JWT_SECRET>",
    "Issuer": "class_api",
    "Audience": "class_web"
  },
  "RabbitMQ": {
    "Enabled": true,
    "HostName": "localhost",
    "Port": 5672,
    "UserName": "<RABBIT_USER>",
    "Password": "<RABBIT_PASS>",
    "QueueName": "notifications"
  },
  "WorkerAuth": {
    "ApiKey": "<WORKER_AUTH_KEY>"
  },
  "Gemini": {
    "ApiKey": "<GEMINI_API_KEY>",
    "Model": "gemini-2.5-flash"
  }
}
